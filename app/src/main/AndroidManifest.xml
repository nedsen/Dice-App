<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.multidice">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/dice_6"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dice_6_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".five_dice" android:screenOrientation="portrait"/>
        <activity android:name=".four_dice" android:screenOrientation="portrait"/>
        <activity android:name=".three_dice" android:screenOrientation="portrait"/>
        <activity android:name=".two_dice" android:screenOrientation="portrait"/>
        <activity android:name=".one_die" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>